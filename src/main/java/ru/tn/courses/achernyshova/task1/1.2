import java.util.Scanner;

public class Queue {
    public static void main (String args[]){
        Scanner in = new Scanner(System.in);

        System.out.println("Введите количество человек в очереди");
        int n = in.nextInt();
        int t[] = new int[n];
        int C[] = new int[n];

        System.out.println("Введите время обслуживания для каждого из " n " покупателей");
        for(int i = 0; i < n; i++) t[i] = in.nextInt();

        for(int i = 1; i < n; i++) {
            C[i] = C[i - 1] + t[i - 1];
        }
        System.out.println("Введите номер нужного покупателя");
        int c = in.nextInt();

        System.out.print("Время ожидания для данного покупателя равно " C[c - 1]);
    }
}
